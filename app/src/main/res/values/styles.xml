<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="tabLayoutCustomStyle" parent="Widget.Design.TabLayout">
        <item name="tabIndicator">@drawable/tab_layout_indicator</item>
    </style>

    <style name="MyDatePickerStyle">
        <item name="android:textColorPrimary">#000000</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="PopupMenuStyle" parent="@style/Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">@drawable/popup_menu_background</item>
        <item name="android:textColor">@color/popup_menu_text_color</item>
        <item name="android:background">@drawable/popup_menu_background</item>
    </style>

    <style name="HorizontalProgressBarStyle" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/music_horizontal_progress_bar</item>
    </style>

    <style name="WhiteSeekBarStyle" parent="Widget.AppCompat.SeekBar">
        <item name="android:progressDrawable">@drawable/music_horizontal_progress_bar</item>
        <item name="android:thumb">@drawable/seekbar_thumb</item>
        <item name="android:minHeight">2dp</item>
    </style>

    <style name="Widget.Theme.Bishnoi.ActionBar.Fullscreen" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="Widget.Theme.Bishnoi.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize the colorPrimary and colorOnSurface attributes for saffron color -->
        <item name="colorPrimary">@color/saffron</item>
        <item name="colorOnSurface">@android:color/black</item>
    </style>

    <style name="Theme.Bishnoi.AdAttribution">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">12sp</item>
        <item name="android:text">Ad</item>
        <item name="android:background">#FFCC66</item>
        <item name="android:width">15dp</item>
        <item name="android:height">15dp</item>
    </style>


</resources>